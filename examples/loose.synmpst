(*
  For loose intersection: loose intersection | loose | intersection

  For tight intersection: tight intersection | tight

*)


global Loose (role A, role B, role S1, role S2)
{
  loose {
    M from A to B ;
    M from B to S1;
  } and {
    M from A to B ;
    M from B to S2 ;
  }
}

global Equivalent (role A, role B, role S1, role S2)
{
  M from A to B ;
  par {
    M from B to S1;
  } and {
    M from B to S2 ;
  }
}
